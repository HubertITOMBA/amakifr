// Mod√®les pour le syst√®me d'√©lections
model Election {
  id          String         @id @default(cuid())
  titre       String         @db.VarChar(255)
  description String?        @db.Text
  status      ElectionStatus @default(Preparation)

  // Dates importantes
  dateOuverture          DateTime
  dateCloture            DateTime
