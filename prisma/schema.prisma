  candidacy Candidacy? @relation(fields: [candidacyId], references: [id], onDelete: SetNull)

  // M√©tadonn√©es
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([electionId, positionId, adherentId])
  @@map("votes")
}

