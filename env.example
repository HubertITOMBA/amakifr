# ============================================
# Configuration Base de Données PostgreSQL
# ============================================
POSTGRES_USER=amakifr
POSTGRES_PASSWORD=votre_mot_de_passe_securise
POSTGRES_DB=amakifr

# URL de connexion à la base de données (pour l'application)
# Format: postgresql://user:password@host:port/database?schema=public
DATABASE_URL=postgresql://amakifr:votre_mot_de_passe_securise@postgres:5432/amakifr?schema=public

# ============================================
# Configuration NextAuth
# ============================================
# Générer une clé secrète avec: openssl rand -base64 32
AUTH_SECRET=votre_clé_secrète_32_caractères_minimum
AUTH_URL=https://votre-domaine.com

# ============================================
# Configuration OAuth (Optionnel)
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=votre_google_client_id
GOOGLE_CLIENT_SECRET=votre_google_client_secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=votre_facebook_app_id
FACEBOOK_CLIENT_SECRET=votre_facebook_app_secret

# Apple OAuth
APPLE_ID=votre_apple_service_id
APPLE_SECRET=votre_apple_private_key

# ============================================
# Configuration Email
# ============================================
# Choisir le provider d'email : 'resend' ou 'smtp'
EMAIL_PROVIDER=resend

# Configuration Resend (si EMAIL_PROVIDER=resend)
RESEND_API_KEY=votre_clé_api_resend

# Configuration SMTP (si EMAIL_PROVIDER=smtp)
# Pour Gmail: host=smtp.gmail.com, port=587, secure=false
# Pour Outlook: host=smtp-mail.outlook.com, port=587, secure=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre_email@gmail.com
SMTP_PASS=votre_mot_de_passe_application
SMTP_FROM=noreply@amaki.fr

# URL publique de l'application (utilisée pour les emails, QR codes, etc.)
# En développement: http://localhost:3000
# En production: https://amaki.fr
NEXT_PUBLIC_APP_URL=https://amaki.fr

# ============================================
# Configuration Application
# ============================================
NEXT_PUBLIC_APP_NAME=AMAKI France
NEXT_PUBLIC_APP_DESCRIPTION=Amaki France built with next.js by Hubert ITOMBA
NEXT_PUBLIC_SERVER_URL=https://votre-domaine.com

# ============================================
# Configuration Session et Sécurité
# ============================================
# Temps d'inactivité avant déconnexion automatique (en millisecondes)
# Par défaut: 15 minutes (15 * 60 * 1000 = 900000)
# Exemple pour 20 minutes: 20 * 60 * 1000 = 1200000
# Exemple pour 30 minutes: 30 * 60 * 1000 = 1800000
NEXT_PUBLIC_SESSION_INACTIVITY_MS=900000

# Délai avant déconnexion lors de la fermeture de l'onglet (en millisecondes)
# Par défaut: 1 seconde (1000)
# Permet de gérer les fermetures rapides d'onglets
NEXT_PUBLIC_SESSION_SIGNOUT_DELAY_MS=1000

# ============================================
# Configuration Paiements
# ============================================
# Choisir le provider de paiement : 'stripe', 'paypal', ou 'virement'
PAYMENT_PROVIDER=stripe

# Configuration Stripe (si PAYMENT_PROVIDER=stripe)
STRIPE_SECRET_KEY=votre_clé_secrète_stripe
STRIPE_WEBHOOK_SECRET=votre_secret_webhook_stripe

# Configuration PayPal (si PAYMENT_PROVIDER=paypal)
PAYPAL_CLIENT_ID=votre_client_id_paypal
PAYPAL_CLIENT_SECRET=votre_client_secret_paypal
PAYPAL_MODE=sandbox  # ou 'live' pour la production

# Configuration Virement bancaire (si PAYMENT_PROVIDER=virement)
# Aucune configuration nécessaire, les paiements seront marqués comme "en attente"
# et devront être validés manuellement par un administrateur

# ============================================
# Configuration Redis (Optionnel mais recommandé)
# ============================================
# Redis est utilisé pour le rate limiting et le cache
# Si Redis n'est pas disponible, l'application utilisera un fallback en mémoire

# Désactiver complètement Redis (utiliser uniquement le fallback en mémoire)
# REDIS_DISABLED=true

# Activer les logs de débogage Redis (pour diagnostiquer les problèmes de connexion)
# REDIS_DEBUG=true

# URL complète de connexion Redis
# Format: redis://host:port ou redis://:password@host:port
# 
# Installation native: redis://127.0.0.1:6379
# Installation Podman/Docker: redis://127.0.0.1:6380 (ou le port mappé)
REDIS_URL=redis://127.0.0.1:6379

# Configuration alternative (si REDIS_URL n'est pas défini)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379  # Utiliser 6380 si Redis est dans un conteneur Podman/Docker
REDIS_PASSWORD=

# Préfixe pour les clés Redis (évite les conflits)
REDIS_KEY_PREFIX=amakifr:

# ============================================
# Configuration Node.js
# ============================================
NODE_ENV=production

